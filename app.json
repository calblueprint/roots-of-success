{
  "name":"roots-of-success",
  "description":"Config for Heroku review apps",
  "scripts":{
    "postdeploy":"bin/heroku-setup"
  },
  "env":{
    "AWS_ACCESS_KEY_ID":{
      "required":true
    },
    "AWS_SECRET_KEY":{
      "required":true
    },
    "DEVISE_SECRET_KEY":{
      "required":true
    },
    "DEVISE_SECRET_TOKEN":{
      "required":true
    },
    "EMAIL_RECIPIENTS":{
      "required":true
    },
    "GA_KEY":{
      "required":true
    },
    "RAILS_ENV":{
      "required":true
    },
    "ROLLBAR_ACCESS_TOKEN":{
      "required":true
    },
    "SECRET_KEY":{
      "required":true
    },
    "SECRET_KEY_BASE":{
      "required":true
    },
    "SECRET_TOKEN":{
      "required":true
    },
    "SMTP_ADDRESS":{
      "required":true
    },
    "SMTP_DOMAIN":{
      "required":true
    },
    "SMTP_PASSWORD":{
      "required":true
    },
    "SMTP_USERNAME":{
      "required":true
    }
  },
  "addons":[
    "newrelic",
    "heroku-postgresql"
  ]
}