          = link_to t(".confirm_button"), confirm_survey_student_path(@student, confirmation_token: @confirmation_token), method: :post, class: "button success"
      .spacer-small
      .row
        .small-12.columns
          .fluid-media
            = @survey.form_embed_code.html_safe
