.spacer
.row
  .small-12.columns
    .center.paper.content
      .spacer-small
      .row
        .small-12.medium-8.medium-push-2.columns
          h3 = t ".heading", student_email: @student.email
          .subtitle = t ".subtitle", classroom_name: @classroom.name
